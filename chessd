#!/bin/sh

cd `dirname $0`

case "$1" in
  start)
    echo "Starting chessd...."
    rm -f chessd.log; twistd --log chessd.log --pidfile chessd.pid -r epoll -oy src/chessd.tac
    ;;
  run)
    echo "Running chessd in the foreground...."
    twistd --pidfile chessd.pid -r epoll -noy src/chessd.tac
    ;;
  test)
    echo "Running test suite...."
    trial -e test/
    ;;
  upgrade)
    echo "Upgrading and restarting server...."
    $0 stop
    hg pull
    hg update
    $0 start
    ;;
  reloaddb)
    echo "Reloading database...."
    mysql chess < db/db.sql
    ./scripts/import-eco.py
    ;;
  profile)
    echo "Running chessd in profile mode...."
    twistd --log chessd.log --profile profile-chessd.data --savestats --profiler cProfile -r epoll -noy src/chessd.tac
    ;;
  stop)
    echo "Stopping chessd...."
    kill `cat chessd.pid`
    ;;
  *)
    echo "Usage: $0 (start|stop|run|test|profile|upgrade|reloaddb)"
    ;;
esac

